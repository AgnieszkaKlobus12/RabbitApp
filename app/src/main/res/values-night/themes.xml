<resources>
    <!-- Base application theme. -->
    <style name="Theme.RabbitApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pastel_color
        </item> <!-- Change to your desired gray color -->
        <item name="colorPrimaryVariant">@color/pastel_color_variant
        </item> <!-- Change to a slightly darker gray if needed -->
        <item name="colorOnPrimary">@color/black</item> <!-- Change to a contrasting text color -->
        <!-- Secondary brand color with pastel shade. -->
        <item name="colorSecondary">@color/pastel_color</item> <!-- Define your pastel color -->
        <item name="colorSecondaryVariant">@color/pastel_color_variant
        </item> <!-- Darker shade of pastel color -->
        <item name="colorOnSecondary">@color/black
        </item> <!-- Change to a contrasting text color -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RabbitApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RabbitApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="Theme.RabbitApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
