<resources>
    <!-- Base application theme. -->
    <style name="Theme.RabbitApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pastel_color_dark
        </item> <!-- Change to your desired gray color -->
        <item name="colorPrimaryVariant">@color/pastel_color_variant_dark
        </item> <!-- Change to a slightly darker gray if needed -->
        <item name="colorOnPrimary">@color/white</item> <!-- Change to a contrasting text color -->
        <!-- Secondary brand color with pastel shade. -->
        <item name="colorSecondary">@color/pastel_color_dark
        </item> <!-- Define your pastel color -->
        <item name="colorSecondaryVariant">@color/pastel_color_variant_dark
        </item> <!-- Darker shade of pastel color -->
        <item name="colorOnSecondary">@color/white
        </item> <!-- Change to a contrasting text color -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
    </style>

    <style name="Theme.RabbitApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="background">@color/background_dark</item>
    </style>

    <style name="Theme.RabbitApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowBackground">@color/pastel_color_dark</item>
        <item name="background">@color/pastel_color_dark</item>
        <item name="colorPrimary">@color/pastel_color_dark</item>
        <item name="android:colorBackground">@color/pastel_color_dark</item>
        <item name="android:background">@color/pastel_color_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Theme.RabbitApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/pastel_color_variant_dark_light</item>
    </style>

</resources>
