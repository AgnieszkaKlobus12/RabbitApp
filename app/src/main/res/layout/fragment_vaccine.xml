<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.vaccines.VaccineFragment">

    <TextView
        android:id="@+id/fragment_vaccine_vaccine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/unknown"
        android:textSize="@dimen/bigger_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragment_vaccine_vaccine_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/unknown" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/fragment_vaccine_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tiny_margin"
        android:visibility="gone" />

    <include
        android:id="@+id/fragment_vaccine_vaccinated"
        layout="@layout/vaccinated_list_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>