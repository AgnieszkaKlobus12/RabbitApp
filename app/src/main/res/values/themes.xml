<resources>
    <!-- Base application theme. -->
    <style name="Theme.RabbitApp" parent="Theme.MaterialComponents.Light">
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Primary brand color with pastel shade. -->
        <item name="colorPrimary">@color/pastel_color_light
        </item> <!-- Lighter pastel color for the light theme -->
        <item name="colorPrimaryVariant">@color/pastel_color_variant_light
        </item> <!-- Lighter shade of pastel color -->
        <item name="colorOnPrimary">@color/black</item> <!-- Change to a contrasting text color -->
        <!-- Secondary brand color with pastel shade. -->
        <item name="colorSecondary">@color/pastel_color_light
        </item> <!-- Lighter pastel color for the light theme -->
        <item name="colorSecondaryVariant">@color/pastel_color_variant_light
        </item> <!-- Lighter shade of pastel color -->
        <item name="colorOnSecondary">@color/black
        </item> <!-- Change to a contrasting text color -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RabbitApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="background">@color/background_light</item>
    </style>

    <style name="Theme.RabbitApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="android:windowBackground">@color/pastel_color_light</item>
        <item name="background">@color/pastel_color_light</item>
        <item name="colorPrimary">@color/pastel_color_light</item>
        <item name="android:colorBackground">@color/pastel_color_light</item>
        <item name="android:background">@color/pastel_color_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="Theme.RabbitApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/pastel_color_light_dark</item>
    </style>

    <style name="Theme.RabbitApp.GoogleButton">
        <item name="android:drawableLeft">@drawable/icon_google</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">#FFFEFEFE</item>
        <item name="android:textColor">#FF373737</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">25dp</item>
    </style>

</resources>
